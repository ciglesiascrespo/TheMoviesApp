<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="toolbar" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MainAcivityTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:background">@null</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="TitleDetailCardTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ContentDetailCardTheme">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/primary_text</item>

    </style>

    <style name="myDialog" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorAlertDialogListItem">@color/accent</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:textColorSecondaryInverse">#acd2d2d2</item>
        <item name="android:textColorTertiary">#3a3a3a</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

</resources>
