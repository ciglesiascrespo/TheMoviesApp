<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_cardview_movies"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_cardview"
    card_view:cardCornerRadius="@dimen/cardview_radius"
    card_view:cardElevation="@dimen/cardview_elevation">

    <ImageView
        android:id="@+id/id_img_movie_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/background_text"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/id_txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_img_ic_date"
            android:textColor="@android:color/white"
            android:textStyle="bold"

            />

        <ImageView
            android:id="@+id/id_img_ic_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_txt_title"
            android:src="@drawable/ic_date_range" />

        <TextView
            android:id="@+id/id_txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_txt_title"
            android:layout_marginLeft="@dimen/margin_left_txt_title"

            android:layout_toRightOf="@id/id_img_ic_date"
            android:textColor="@android:color/white" />
    </RelativeLayout>

</android.support.v7.widget.CardView>